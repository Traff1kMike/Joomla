<?xml version="1.0" encoding="utf-8"?>
<extension
	type="module"
	version="3.1"
	client="site"
	method="upgrade">
	<name>MOD_VISIASLIDER</name>
	<author>J!Labs</author>
	<creationDate>Oct 2013</creationDate>
	<copyright>Copyright (C)2013 J!Labs . All rights unreserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>erwin@joomla-labs.com</authorEmail>
	<authorUrl>www.joomla-labs.com</authorUrl>
	<version>3.0.0</version>
	<description>MOD_VISIASLIDER_XML_DESC</description>
	<files>
		<filename module="mod_visiaslider">mod_visiaslider.php</filename>
		<filename module="mod_visiaslider">index.html</filename>
		<filename>helper.php</filename>
		<folder>tmpl</folder>
		<folder>assets</folder>
	</files>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.mod_visiaslider.ini</language>
		<language tag="en-GB">en-GB/en-GB.mod_visiaslider.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				
				<field
					name="mode"
					type="radio"
					default="0"
					label="MOD_VISIASLIDER_MODE_LABEL"
					description="MOD_VISIASLIDER_MODE_DESC" >
					<option value="0">Default</option>
					<option value="1">Project</option>
				</field>
				
		


                <field name="displayspacer1" type="spacer" label="------------------------------------ Slider Images ------------------------------------" class="text"/>
                
				<field name="img_1" type="media"
					   label="MOD_VISIASLIDER_IMG1_LABEL" description="MOD_VISIASLIDER_IMG1_DESC" />
				<!--
				<field name="imgtitle_1" type="text"
					   label="MOD_VISIASLIDER_IMGTITLE1_LABEL" description="MOD_VISIASLIDER_IMGTITLE1_DESC" />
				<field name="imgdesc_1" type="text"
					   label="MOD_VISIASLIDER_IMGDESC1_LABEL" description="MOD_VISIASLIDER_IMGDESC1_DESC" />
				-->

				
				<field name="img_2" type="media"
					   label="MOD_VISIASLIDER_IMG2_LABEL" description="MOD_VISIASLIDER_IMG2_DESC" />
				<!--
				<field name="imgtitle_2" type="text"
					   label="MOD_VISIASLIDER_IMGTITLE2_LABEL" description="MOD_VISIASLIDER_IMGTITLE2_DESC" />
				<field name="imgdesc_2" type="text"
					   label="MOD_VISIASLIDER_IMGDESC2_LABEL" description="MOD_VISIASLIDER_IMGDESC2_DESC" />
				-->

				<field name="img_3" type="media"
					   label="MOD_VISIASLIDER_IMG3_LABEL" description="MOD_VISIASLIDER_IMG3_DESC" />
				<!--
				<field name="imgtitle_3" type="text"
					   label="MOD_VISIASLIDER_IMGTITLE3_LABEL" description="MOD_VISIASLIDER_IMGTITLE3_DESC" />
				<field name="imgdesc_3" type="text"
					   label="MOD_VISIASLIDER_IMGDESC3_LABEL" description="MOD_VISIASLIDER_IMGDESC3_DESC" />
				-->

						
			</fieldset>
			
			<fieldset
				name="advanced">
				<field
					name="moduleclass_sfx"
					type="text"
					label="Module Class Suffix"
					description="Module Class Suffix" />

				<field
					name="layout"
					type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					description="JFIELD_ALT_MODULE_LAYOUT_DESC" />

				<field
					name="cache"
					type="list"
					default="1"
					label="Caching"
					description="Select whether to cache the content of this module or not">
					<option
						value="1">Use global</option>
					<option
						value="0">No caching</option>
				</field>
				
				<field
					name="cache_time"
					type="text"
					default="900"
					label="Cache Time"
					description="The time before the module is recached" />

				<field
					name="cachemode"
					type="hidden"
					default="itemid">
					<option
						value="itemid"></option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
